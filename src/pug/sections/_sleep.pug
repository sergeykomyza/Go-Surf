-
	var locations = [
		{town: 'Malibu Beach', country: 'Usa'},
		{town: 'Airlie Beach', country: 'Australia'}
	]

	var travelSlides = [
		{
			slideImg: 'Sleep-Image.webp', 
			airline: 'excellent', 
			airlineIcon: 'Star.svg',
			datas: [
				{
					dataTitle: 'resort', 
					dataValue: 'auberge australia'
				},
				{
					counting: true,
					dataTitle: '# of nights', 
					dataValue: '<span class="nights jsCount" data-price="50">1</span> nights'
				},
				{
					counting: true,
					dataTitle: '# of guests', 
					dataValue: '<span class="guests jsCount" data-price="20">1</span> guests'
				},
				{
					dataTitle: 'pricing', 
					dataValue: '$ <span class="price">70</span> usd'
				}
			]
		},
		{
			slideImg: 'Virgin-img.webp', 
			airline: 'Virgin Australia', 
			airlineIcon: 'Star.svg',
			datas: [
				{
					dataTitle: 'destination', 
					dataValue: 'queensland australia'
				},
				{
					dataTitle: 'distance', 
					dataValue: '7,065 miles'
				},
				{
					dataTitle: 'travel time', 
					dataValue: '23 hours 5minutes'
				},
				{
					dataTitle: 'pricing', 
					dataValue: '$1,976 usd'
				}
			]
		}
	]

section.sleep 

	h3.sleep__title.title sleep
	p.sleep__backtitle.backtitle sleep

	+location('resorts', locations) 

	+sliderNav('sleep__nav')

	.swiper
		.swiper-wrapper
			each item in travelSlides
				.swiper-slide.travel-slide
					img.travel-slide__img(src="img/" + item.slideImg, alt="travel-img")
					.travel-slide__data.data
						.data-heading(data-swiper-parallax="400" data-swiper-parallax-duration="600")
							p.data-heading__title airline
							b.data-heading__value= item.airline
								img.data-heading__icon.data-heading__icon--rating(src="img/" + item.airlineIcon, alt="virgin-text")
						.data__items(data-swiper-parallax="-400" data-swiper-parallax-duration="600")
							each elem in item.datas
								.data__item
									p.data__title= elem.dataTitle
									.data__box
										b.data__value !{elem.dataValue}
										br
										if(elem.counting === true)
											.data__counting
												button.data__btn.jsMinus
													svg(width='14' height='4' viewBox='0 0 14 4' fill='none')
														path(d='M0.137527 0.376953H13.8633V3.12178H0.137527L0.137527 0.376953Z' fill='#4AF6CD')
												button.data__btn.jsPlus
													svg(width='14' height='14' viewBox='0 0 14 14' fill='none')
														path(d='M0.137527 5.62695H13.8633V8.37178H0.137527L0.137527 5.62695Z' fill='#4AF6CD')
														path(d='M5.62718 0.137695H8.37201V13.8635H5.62718V0.137695Z' fill='#4AF6CD')
					img.travel-slide__decor.travel-slide__decor--2(src="img/Hammock.webp", alt="airbus")
					img.travel-slide__decor.travel-slide__decor--3(src="img/flower.webp", alt="cosktail")

	.center-box
		+surfView('book', 'stay', 'sleep__viewlink')

