	.swiper.content-swiper
		.swiper-wrapper 
			.swiper-slide.travel-slide 
				img.travel-slide__img(src="img/Virgin-img.webp", alt="travel-img")
				img.travel-slide__fly(src="img/Airbus.webp", alt="airbus")
				.travel-slide__data.data
					.data__heading.data-heading(data-swiper-parallax="400" data-swiper-parallax-duration="600")
						p.data-heading__title airline 
						b.data-heading__value Virgin Australia
							img.data-heading__icon(src="img/virgin-text.svg", alt="virgin-text")
					.data__items(data-swiper-parallax="-400" data-swiper-parallax-duration="600") 
						+dataItem('destination', 'queensland australia')
						+dataItem('distance', '7,065 miles')
						+dataItem('travel time', '23 hours 5minutes')
						+dataItem('pricing', '$1,976 usd')
				img.travel-slide__decor(src="img/cocktail.webp", alt="cosktail")

			.swiper-slide.travel-slide 
				img.travel-slide__img(src="img/Sleep-image.webp", alt="travel-img")
				.travel-slide__data.data
					.data__heading.data-heading(data-swiper-parallax="400" data-swiper-parallax-duration="600")
						p.data-heading__title airline 
						b.data-heading__value Virgin Australia
							img.data-heading__icon(src="img/virgin-text.svg", alt="virgin-text")
					.data__items(data-swiper-parallax="-400" data-swiper-parallax-duration="600")
						+dataItem('destination', 'california usa')
						+dataItem('distance', '10,065 miles')
						+dataItem('travel time', '34 hours 15minutes')
						+dataItem('pricing', '$2,376 usd')